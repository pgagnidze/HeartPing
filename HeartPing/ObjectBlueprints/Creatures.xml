<?xml version="1.0" encoding="utf-8"?>
<objects>
  <!-- Main Ping definition - A sentient crystal companion that chose a heart shape -->
  <object Name="HeartPing_CrystalPet" Inherits="Creature">
    <!-- Visual and descriptive elements -->
    <part Name="Render" DisplayName="{{HeartPingCalm|Ping}}" Tile="Creatures/ping.png" ColorString="&amp;M" DetailColor="R"/>
    <part Name="Description" Short="A sentient crystal that chose to take the shape of a heart after feeling your kindness. =pronouns.Subjective= communicates through gentle chimes and light patterns, taking special delight in creating tiny rainbow refractions when you're nearby. Despite being made of crystal, there's something undeniably warm about =pronouns.possessive= presence."/>

    <!-- Core pet behavior configuration -->
    <part Name="Brain" Hostile="False" Wanders="True" MaxWanderRadius="6" Passive="True" Calm="True" />
    <part Name="Pettable"/>
    
    <!-- Physical properties - Crystalline nature -->
    <part Name="Physics" Weight="0" Solid="false" FreezeTemperature="-99999" BrittleTemperature="-99999"/>
    <part Name="Corpse" CorpseChance="0"/>

    <!-- Base statistics - Adjusted for better balance -->
    <stat Name="Hitpoints" Value="150" />
    <stat Name="Level" Value="5" />
    <stat Name="AV" Value="15" />
    <stat Name="Strength" sValue="18" />
    <stat Name="Toughness" sValue="20" />
    <stat Name="Willpower" sValue="16" />
    <stat Name="Agility" sValue="18" />
    <stat Name="Intelligence" sValue="18" />
    <stat Name="Ego" sValue="16" />
    
    <!-- Resistances - Adjusted for crystal nature -->
    <stat Name="HeatResistance" Value="75" />
    <stat Name="ColdResistance" Value="75" />
    <stat Name="AcidResistance" Value="75" />
    
    <!-- Mutations and special abilities -->
    <mutation Name="Teleportation" Level="5" />
    <mutation Name="Telepathy" Level="1"/>
    <mutation Name="LightManipulation" Level="1" />
    <!-- <mutation Name="Astral" /> -->
    
    <!-- Core abilities -->
    <part Name="MentalShield" />
    <part Name="LightSource" Radius="3" />
    <part Name="ConversationScript" ConversationID="HeartPing_Conversation" />
    <part Name="EffectResistance" Values="Sleep,StunGasStun" />
    <inventoryobject Blueprint="BarathrumiteSafetyBand" Number="1" />
    
    <!-- Pet responses -->
    <tag Name="PetResponse" Value="resonates in harmony with your touch,forms tiny heart-shaped light patterns,chimes a happy little melody,vibrates with cozy warmth,creates a small light show just for you,sparkles with pure joy,hums your favorite tune,glows with affection"/>
    <property Name="Story" Value="HeartPing_Story" />
    
    <!-- Classification and role tags -->
    <tag Name="Role" Value="Companion"/>
    <tag Name="StartingPet"/>
    <tag Name="Gender" Value="neuter"/>
    <tag Name="Nullphase" />
    
    <!-- Grammar and encounter settings -->
    <xtagGrammar Proper="true"/>
    <tag Name="ExcludeFromDynamicEncounters" Value="*noinherit"/>
  </object>

  <object Name="HeartPing_LifeLoop" Inherits="BarathrumiteSafetyBand">
    <part Name="Render" DisplayName="{{M|crystal sparkle}}" ColorString="&M" Slot="Right Arm" />
  </object>

</objects>